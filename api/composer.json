{
  "name": "tr-logic-llc/api",
  "type": "project",
  "license": "BSD-3-Clause",
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "require": {
    "php": "^7.4",
    "ext-json": "^7.4",
    "doctrine/migrations": "^2.2",
    "doctrine/orm": "^2.7",
    "laminas/laminas-config-aggregator": "^1.2",
    "php-di/php-di": "^6.1",
    "ramsey/uuid": "^4.0",
    "slim/psr7": "^1.1",
    "slim/slim": "^4.5",
    "symfony/console": "^5.0",
    "webmozart/assert": "^1.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.1",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  },
  "scripts": {
    "app": "php bin/app.php --ansi",
    "test": "phpunit --colors=always"
  }
}
